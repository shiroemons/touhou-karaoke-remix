{
  "name": "touhou-karaoke-remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "build:css": "npm run generate:css --minify",
    "build:remix": "remix build",
    "dev": "remix dev --manual -c \"npm run start\"",
    "start": "wrangler pages dev --compatibility-date=2023-06-21 ./public",
    "typecheck": "tsc",
    "generate:css": "npx tailwindcss -o ./app/styles/tailwind.css",
    "postinstall": "remix-esbuild-override",
    "pages:deploy": "npm run build && wrangler pages deploy ./public"
  },
  "dependencies": {
    "@algolia/requester-fetch": "^4.20.0",
    "@mantine/core": "^7.1.7",
    "@mantine/hooks": "^7.1.7",
    "@radix-ui/react-toast": "^1.1.5",
    "@remix-run/cloudflare": "^2.1.0",
    "@remix-run/cloudflare-pages": "^2.1.0",
    "@remix-run/css-bundle": "^2.1.0",
    "@remix-run/react": "^2.1.0",
    "algoliasearch": "^4.20.0",
    "instantsearch.css": "^8.1.0",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-instantsearch": "^7.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230518.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@remix-run/dev": "^2.1.0",
    "@remix-run/eslint-config": "^2.1.0",
    "@types/algoliasearch": "^4.0.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-instantsearch-dom": "^6.12.5",
    "eslint": "^8.38.0",
    "postcss": "^8.4.31",
    "postcss-preset-mantine": "^1.9.0",
    "postcss-simple-vars": "^7.0.1",
    "remix-esbuild-override": "^3.1.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.1.0",
    "wrangler": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
